<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <include layout="@layout/toolbar"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hamocue"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_marginStart="@dimen/side_margin"
                    android:layout_marginEnd="@dimen/side_margin"
                    android:textSize="@dimen/text_size"
                    android:id="@+id/hamocue_label"
            />
            <ListView
                    android:id="@+id/hamocue"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:divider="@android:color/transparent"
                    android:layout_marginStart="@dimen/side_margin"
                    android:layout_marginEnd="@dimen/side_margin"
                    android:textSize="@dimen/text_size"
                    android:layout_weight="1"
                    android:dividerHeight="10.0sp" />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bled By"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_marginStart="@dimen/side_margin"
                    android:layout_marginEnd="@dimen/side_margin"
                    android:textSize="@dimen/text_size"
            />
            <ListView
                    android:id="@+id/bled_by"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:divider="@android:color/transparent"
                    android:layout_marginStart="@dimen/side_margin"
                    android:layout_marginEnd="@dimen/side_margin"
                    android:textSize="@dimen/text_size"
                    android:layout_weight="1"
                    android:dividerHeight="10.0sp" />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Donation Number"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_marginStart="@dimen/side_margin"
                    android:layout_marginEnd="@dimen/side_margin"
                    android:textSize="@dimen/text_size"
            />
            <EditText
                    android:id="@+id/donor_number"
                    android:inputType="text"
                    android:hint="Donation Number"
                    style="@style/TextBoxStyle"/>
            <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_save"
                    style="@style/ButtonStyle"
                    android:text="@string/btn_next_label"
            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>