<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <include layout="@layout/toolbar"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Occupation"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_marginStart="@dimen/side_margin"
                    android:layout_marginEnd="@dimen/side_margin"
                    android:textSize="@dimen/text_size"
            />
            <ListView
                    android:id="@+id/occupation"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:divider="@android:color/transparent"
                    android:layout_marginStart="@dimen/side_margin"
                    android:layout_marginEnd="@dimen/side_margin"
                    android:textSize="@dimen/text_size"
                    android:layout_weight="1"
                    android:dividerHeight="10.0sp" />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Marital Status"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_marginStart="@dimen/side_margin"
                    android:layout_marginEnd="@dimen/side_margin"
                    android:textSize="@dimen/text_size"
            />
            <ListView
                    android:id="@+id/marital_status"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:divider="@android:color/transparent"
                    android:layout_marginStart="@dimen/side_margin"
                    android:layout_marginEnd="@dimen/side_margin"
                    android:textSize="@dimen/text_size"
                    android:layout_weight="1"
                    android:dividerHeight="10.0sp" />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Residential Address"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_marginStart="@dimen/side_margin"
                    android:layout_marginEnd="@dimen/side_margin"
                    android:textSize="@dimen/text_size"
            />
            <EditText
                    android:id="@+id/residential_address"
                    android:inputType="text"
                    android:hint="Residential Address"
                    style="@style/TextBoxStyle"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_marginStart="@dimen/side_margin"
                    android:layout_marginEnd="@dimen/side_margin"
                    android:textSize="@dimen/text_size"
            />
            <ListView
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:divider="@android:color/transparent"
                    android:layout_marginStart="@dimen/side_margin"
                    android:layout_marginEnd="@dimen/side_margin"
                    android:textSize="@dimen/text_size"
                    android:layout_weight="1"
                    android:dividerHeight="10.0sp" />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home Telephone Number"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_marginStart="@dimen/side_margin"
                    android:layout_marginEnd="@dimen/side_margin"
                    android:textSize="@dimen/text_size"
            />
            <EditText
                    android:id="@+id/home_telephone"
                    android:inputType="text"
                    android:hint="Home Telephone Number"
                    style="@style/TextBoxStyle"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Work Telephone Number"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_marginStart="@dimen/side_margin"
                    android:layout_marginEnd="@dimen/side_margin"
                    android:textSize="@dimen/text_size"
            />
            <EditText
                    android:id="@+id/work_telephone"
                    android:inputType="text"
                    android:hint="Work Telephone Number"
                    style="@style/TextBoxStyle"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cellphone Number"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_marginStart="@dimen/side_margin"
                    android:layout_marginEnd="@dimen/side_margin"
                    android:textSize="@dimen/text_size"
            />
            <EditText
                    android:id="@+id/cellphone_number"
                    android:inputType="text"
                    android:hint="Cellphone Number"
                    style="@style/TextBoxStyle"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email Address"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_marginStart="@dimen/side_margin"
                    android:layout_marginEnd="@dimen/side_margin"
                    android:textSize="@dimen/text_size"
            />
            <EditText
                    android:id="@+id/email"
                    android:inputType="text"
                    android:hint="Email Address"
                    style="@style/TextBoxStyle"/>
            <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_save"
                    style="@style/ButtonStyle"
                    android:text="@string/btn_next_label"
            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>